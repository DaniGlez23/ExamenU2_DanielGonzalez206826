<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="236dp"
        android:layout_height="179dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055"
        app:srcCompat="@drawable/grupo2" />

    <Button
        android:id="@+id/btn_peluches"
        android:layout_width="175dp"
        android:layout_height="72dp"
        android:background="@color/rosa"
        android:text="Peluches"
        app:layout_constraintBottom_toTopOf="@+id/btn_regalos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_globos" />

    <Button
        android:id="@+id/btn_globos"
        android:layout_width="173dp"
        android:layout_height="67dp"
        android:background="@color/rosa"
        android:text="Globos"
        app:layout_constraintBottom_toTopOf="@+id/btn_peluches"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_detalles" />

    <Button
        android:id="@+id/btn_detalles"
        android:layout_width="180dp"
        android:layout_height="67dp"
        android:background="@color/rosa"
        android:text="Detalles"
        app:layout_constraintBottom_toTopOf="@+id/btn_globos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_regalos"
        android:layout_width="170dp"
        android:layout_height="61dp"
        android:background="@color/rosa"
        android:text="Regalos"
        app:layout_constraintBottom_toTopOf="@+id/btn_tazas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_peluches" />

    <Button
        android:id="@+id/btn_tazas"
        android:layout_width="176dp"
        android:layout_height="59dp"
        android:background="@color/rosa"
        android:text="Tazas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_regalos" />
</androidx.constraintlayout.widget.ConstraintLayout>